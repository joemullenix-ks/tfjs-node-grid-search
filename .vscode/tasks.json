{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json"
		},
		{
			"label": "clean build dir - Win",
			"type": "shell",
			"windows": {
				"command": "del",
				"args": [
					"dist/*",
					"-Recurse"
				]
			}
		}
	]
}