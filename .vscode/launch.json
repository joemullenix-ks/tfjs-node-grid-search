	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch transpiled JS as CJS",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\dist\\cjs\\all.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch transpiled JS as ESM",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\dist\\esm\\all.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch as TypeScript",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\src\\all.ts"
		}
	]
}